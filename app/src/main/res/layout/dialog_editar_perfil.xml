<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp"
    android:background="@drawable/bg_modal">

    <!-- Título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_width="150dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnCerrarModal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:contentDescription="Cerrar" />

    </LinearLayout>
    <!-- Imagen de perfil con icono para cambiar -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle"
            android:clipToOutline="true"
            android:outlineProvider="background"/>

        <ImageView
            android:id="@+id/btnCambiarFoto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:src="@drawable/ic_camara"
            android:background="@drawable/bg_circle_small"
            android:padding="4dp"/>
    </FrameLayout>

    <TextView
        android:text="Nombre:"
        android:textColor="@color/textWhite"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:hint="biped"
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:textColor="@color/textWhite"
        android:textColorHint="#AAFFFFFF" />


    <TextView
        android:text="Email:"
        android:textColor="@color/textWhite"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/ic_email_modal"
        android:drawablePadding="12dp"
        android:hint="thebiped@hotmail.com"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textColor="@color/textWhite"
        android:textColorHint="#AAFFFFFF" />


    <TextView
        android:text="Descripción:"
        android:textColor="@color/textWhite"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="12dp"
        android:layout_marginBottom="24dp"
        android:paddingBottom="50dp"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:hint="mi perfil de jugador profesional con 3 años de experiencia real en el juego del ahorcado"
        android:inputType="textMultiLine"
        android:textColor="@color/textWhite"
        android:textColorHint="#AAFFFFFF" />


    <!-- Botón confirmar -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Confirmar los cambios"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_editar_perfil_modal"
        android:textColor="#FFFFFF"/>
</LinearLayout>
