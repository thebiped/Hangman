<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/itemRanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:weightSum="6"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvPosicion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_ranking_item"
            android:layout_weight="0.5"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:background="@drawable/bg_ranking_item"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="start"
                android:src="@drawable/avatar"
                android:background="@drawable/bg_profile_border"
                android:clipToOutline="true"
                android:outlineProvider="background" />

            <TextView
                android:id="@+id/tvNombreJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JugadorX"
                android:textColor="@color/textWhite"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/bg_ranking_item"
            android:text="12000"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvBonus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/bg_ranking_item"
            android:text="4500"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/bg_ranking_item"
            android:text="1000000"
            android:textColor="@android:color/white"
            android:layout_weight="1.5"
            android:gravity="center" />
    </LinearLayout>

</merge>
